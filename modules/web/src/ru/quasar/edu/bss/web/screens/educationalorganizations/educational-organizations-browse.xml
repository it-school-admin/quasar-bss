<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://educationalOrganizationsBrowse.caption"
        focusComponent="educationalOrganizationsesTable"
        messagesPack="ru.quasar.edu.bss.web.screens.educationalorganizations">
    <data readOnly="true">
        <collection id="educationalOrganizationsesDc"
                    class="ru.quasar.edu.bss.entity.EducationalOrganizations">
            <view extends="_local">
                <property name="director" view="_minimal"/>
                <property name="structureElements" view="_minimal"/>
            </view>
            <loader id="educationalOrganizationsesDl">
                <query>
                    <![CDATA[select e from bss_EducationalOrganizations e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="educationalOrganizationsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="educationalOrganizationsesTable"
                dataLoader="educationalOrganizationsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="educationalOrganizationsesTable"
                    width="100%"
                    dataContainer="educationalOrganizationsesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="shortName"/>
                <column id="name"/>
                <column id="address"/>
                <column id="email"/>
                <column id="phone"/>
                <column id="site"/>
                <column id="director"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="educationalOrganizationsesTable.create"/>
                <button id="editBtn" action="educationalOrganizationsesTable.edit"/>
                <button id="removeBtn" action="educationalOrganizationsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
