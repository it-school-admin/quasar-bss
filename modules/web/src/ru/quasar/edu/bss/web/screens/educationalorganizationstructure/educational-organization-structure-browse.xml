<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://educationalOrganizationStructureBrowse.caption"
        focusComponent="educationalOrganizationStructuresTable"
        messagesPack="ru.quasar.edu.bss.web.screens.educationalorganizationstructure">
    <data readOnly="true">
        <collection id="educationalOrganizationStructuresDc"
                    class="ru.quasar.edu.bss.entity.EducationalOrganizationStructure">
            <view extends="_local">
                <property name="director" view="_minimal"/>
                <property name="educationalOrganizations" view="_minimal"/>
            </view>
            <loader id="educationalOrganizationStructuresDl">
                <query>
                    <![CDATA[select e from bss_EducationalOrganizationStructure e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="educationalOrganizationStructuresTable"
            spacing="true">
        <filter id="filter"
                applyTo="educationalOrganizationStructuresTable"
                dataLoader="educationalOrganizationStructuresDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="educationalOrganizationStructuresTable"
                    width="100%"
                    dataContainer="educationalOrganizationStructuresDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="shortName"/>
                <column id="name"/>
                <column id="director"/>
                <column id="site"/>
                <column id="address"/>
                <column id="educationalOrganizations"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="educationalOrganizationStructuresTable.create"/>
                <button id="editBtn" action="educationalOrganizationStructuresTable.edit"/>
                <button id="removeBtn" action="educationalOrganizationStructuresTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
