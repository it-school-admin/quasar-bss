<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://educationalOrganizationsEdit.caption"
        focusComponent="form"
        messagesPack="ru.quasar.edu.bss.web.screens.educationalorganizations">
    <data>
        <instance id="educationalOrganizationsDc"
                  class="ru.quasar.edu.bss.entity.EducationalOrganizations">
            <view extends="_local">
                <property name="director" view="_minimal"/>
                <property name="structureElements" view="_minimal"/>
            </view>
            <loader/>
            <collection id="structureElementsDc" property="structureElements"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="educationalOrganizationsDc">
            <column width="350px">
                <textField id="shortNameField" property="shortName"/>
                <textField id="nameField" property="name"/>
                <textField id="addressField" property="address"/>
                <textField id="emailField" property="email"/>
                <textField id="phoneField" property="phone"/>
                <textField id="siteField" property="site"/>
                <pickerField id="directorField" property="director">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <groupBox id="structureElementsBox"
                  caption="msg://ru.quasar.edu.bss.entity/EducationalOrganizations.structureElements">
            <table id="structureElementsTable" dataContainer="structureElementsDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <buttonsPanel>
                    <button action="structureElementsTable.create"/>
                    <button action="structureElementsTable.edit"/>
                    <button action="structureElementsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
