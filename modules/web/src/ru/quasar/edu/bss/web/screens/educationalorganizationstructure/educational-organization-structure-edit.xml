<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://educationalOrganizationStructureEdit.caption"
        focusComponent="form"
        messagesPack="ru.quasar.edu.bss.web.screens.educationalorganizationstructure">
    <data>
        <instance id="educationalOrganizationStructureDc"
                  class="ru.quasar.edu.bss.entity.EducationalOrganizationStructure">
            <view extends="_local">
                <property name="director" view="_minimal"/>
                <property name="educationalOrganizations" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="educationalOrganizationStructureDc">
            <column width="350px">
                <textField id="shortNameField" property="shortName"/>
                <textField id="nameField" property="name"/>
                <pickerField id="directorField" property="director">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="siteField" property="site"/>
                <textField id="addressField" property="address"/>
                <pickerField id="educationalOrganizationsField" property="educationalOrganizations">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
